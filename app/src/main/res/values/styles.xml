<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--去掉系统默认的标题栏-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--加载中对话框-->
    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item> <!-- activity不变暗 -->
    </style>
    <!--登录页面start-->
    <style name="login_linearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_45</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/login_linearlayout_bg</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="login_imageview">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">7dp</item>
    </style>

    <style name="login_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textColor">@color/login_account_psw_edit_input_color</item>
        <item name="android:textColorHint">@color/login_account_psw_edit_hint_color</item>
        <item name="android:layout_marginLeft">10sp</item>
    </style>
    <!--登录页面end-->
    <!--统一style的textview-->
    <style name="ty_style_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/app_all_tv_black_color</item>
    </style>
    <!--统一left_textview的style-->
    <style name="left_tv_style_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_35</item>
        <item name="android:textColor">@color/app_all_tv_black_color</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/dp_15</item>
    </style>
    <!--统一main_toolbar_title_textview的style-->
    <style name="main_toolbar_title_tvstyle_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/app_all_tv_black_color</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
