<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/fg_monitor_mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/fg_monitor_search_fly_bg">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:drawableLeft="@drawable/fg_monitor_search_icon"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:hint="@string/fg_monitor_search_str"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:textColor="@color/app_all_tv_black_color"
            android:textColorHint="@color/login_account_psw_edit_hint_color"
            android:textSize="@dimen/sp_12" />

    </FrameLayout>
</FrameLayout>